@model Empty_TaskApplication.Models.DateInfo
@{
    ViewBag.Title = "Create Date Info";
}

<script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-60:+0"
         });

     });
</script>  
  
<h2>Create</h2>

@using (Html.BeginForm())
{
<body>
    
    @Html.LabelFor(model => model.date) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Html.EditorFor(model => model.date)
    <br /><br />
    @Html.LabelFor(model => model.isHoliday) &nbsp;&nbsp;&nbsp; @Html.EditorFor(model => model.isHoliday)
    <br /><br />
    <input type="submit" value="Create" class="btn btn-default" />    
</body>
}